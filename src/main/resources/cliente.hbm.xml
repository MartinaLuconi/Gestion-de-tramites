<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="entidades.Cliente" table="cliente">

        <id name="OID" type="string">
            <column name="OIDCliente"/>
            <generator class="uuid2"/>
        </id>

        <property name="cuitCliente" type="string">
            <column name="cuitCliente"/>
        </property>

        <property name="nombreApellidoCliente" type="string">
            <column name="nombreApellidoCliente"/>
        </property>
        
        <property name="direccionCliente" type="string">
            <column name="direccionCliente"/>
        </property>
        
        <property name="mailCliente" type="string">
            <column name="mailCliente"/>
        </property>
        
        <property name="telefonoCliente" type="double">
            <column name="telefonoCliente"/>
        </property>

        <property name="fechaHoraAltaCliente" column="fechaHoraAltaCliente" type="timestamp" not-null="true"/>

        <property name="fechaHoraBajaCliente" column="fechaHoraBajaCliente" type="timestamp"/>
        
    </class>
    
</hibernate-mapping>
